# Configurações do Django
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///db.sqlite3

# Configurações do Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token_here
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key_here
MERCADO_PAGO_SANDBOX=True

# URLs do Sistema
SITE_URL=http://localhost:8000

# Configurações de Webhook
WEBHOOK_SECRET_KEY=your_webhook_secret_key_here
WEBHOOK_TIMEOUT=300

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=your_email@gmail.com

# Configurações de Logging
LOG_LEVEL=INFO

# Configurações de Produção
PRODUCTION=False
PYTHONANYWHERE=False

# Configurações do Google OAuth2
GOOGLE_OAUTH2_CLIENT_ID=REPLACE_WITH_YOUR_GOOGLE_CLIENT_ID
GOOGLE_OAUTH2_SECRET=REPLACE_WITH_YOUR_GOOGLE_CLIENT_SECRET